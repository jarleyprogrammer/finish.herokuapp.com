<div class="container alert alert-dark bg-dark">
  <div class="alert alert-dark">
    <h2>Olvidaste tu contrase単a? </h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "Nueva Contrase単a" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> Caracteres Minimo)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
      </div> <br>

      <div class="field">
        <%= f.label :password_confirmation, "Confirmar Nueva Contrase単a" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div> <br>

      <div class="actions">
        <%= f.submit "Guardar Contrase単a", class: "btn btn-dark" %>
      </div> <br>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
